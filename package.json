{
  "name": "@ordinateio/lexicon",
  "version": "1.0.1",
  "description": "Manages translations of the user interface.",
  "main": "dist/lexicon.js",
  "types": "dist/lexicon.d.ts",
  "files": [
    "dist/**/*"
  ],
  "author": "Ordinate IO (https://github.com/ordinateio)",
  "license": "MIT",
  "homepage": "https://github.com/ordinateio/lexicon",
  "bugs": {
    "url": "https://github.com/ordinateio/lexicon/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ordinateio/lexicon.git"
  },
  "keywords": [
    "front-end",
    "back-end",
    "typescript"
  ],
  "scripts": {
    "build:all": "npm run build:clean && npm run build:dist && npm run build:demo",
    "build:dist": "npx tsc --project tsconfig.json",
    "build:demo": "npx webpack --config demo/webpack.config.js",
    "build:demo:watch": "npx webpack --watch --config demo/webpack.config.js",
    "build:demo:server": "npx live-server ./demo",
    "build:clean": "npx rimraf .cache dist demo/dist *.tgz",
    "npm:pack": "npm run build:clean && npm run build:dist && npm pack",
    "npm:publish": "npm publish --access public",
    "npm:reinstall": "npx rimraf node_modules && npm install",
    "npm:install:lock": "npm install --package-lock-only"
  },
  "devDependencies": {
    "@types/node": "^14",
    "autoprefixer": "^10",
    "css-loader": "^5",
    "cssnano": "^4",
    "live-server": "^1",
    "postcss-loader": "^5",
    "rimraf": "^3",
    "sass": "^1",
    "sass-loader": "^11",
    "style-loader": "^2",
    "ts-loader": "^8",
    "typescript": "^4",
    "webpack": "^5",
    "webpack-cli": "^4"
  }
}
