{
  "name": "@ordinateio/lexicon",
  "version": "2.0.3",
  "description": "Manages translations of the user interface.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "author": "Ordinate IO (https://github.com/ordinateio)",
  "license": "MIT",
  "homepage": "https://github.com/ordinateio/lexicon",
  "bugs": {
    "url": "https://github.com/ordinateio/lexicon/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ordinateio/lexicon.git"
  },
  "keywords": [
    "front-end",
    "back-end",
    "typescript"
  ],
  "scripts": {
    "build:all": "run-s clean:all build:{dist,dev}",
    "build:dev": "webpack --config demo/webpack.dev.js",
    "build:dev:watch": "webpack --watch --config demo/webpack.dev.js",
    "build:dev:serve": "live-server ./demo",
    "build:dist": "tsc --project tsconfig.json",
    "clean:all": "run-s clean:{cache,dist,demo}",
    "clean:cache": "rimraf .cache",
    "clean:dist": "rimraf dist",
    "clean:demo": "rimraf demo/dist",
    "npm:pack": "run-s clean:{cache,dist} build:dist && npm pack",
    "npm:publish": "run-s clean:{cache,dist} build:dist && npm publish --access public",
    "npm:update:lock": "npm install --package-lock-only"
  },
  "devDependencies": {
    "@types/node": "^14",
    "autoprefixer": "^10",
    "css-loader": "^5",
    "cssnano": "^4",
    "live-server": "^1",
    "npm-run-all": "^4",
    "postcss-loader": "^5",
    "rimraf": "^3",
    "sass": "^1",
    "sass-loader": "^11",
    "style-loader": "^2",
    "ts-loader": "^8",
    "typescript": "^4",
    "webpack": "^5",
    "webpack-cli": "^4",
    "webpack-merge": "^5"
  }
}
